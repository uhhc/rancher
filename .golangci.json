{
    "linters": {
        "disable-all": true,
        "enable": [
            "govet",
            "golint",
            "goimports"
        ]
    },
    "linters-settings": {
        "govet": {
            "check-shadowing": false
        },
        "gofmt": {
            "simplify": false
        }
    },
    "run": {
        "skip-dirs": [
            "vendor",
            "tests",
            "pkg/wrangler/generated"
        ],
        "tests": false,
        "timeout": "10m"
    },
    "issues": {
        "exclude-rules": [
            {
                "linters": "govet",
                "text": "^(nilness|structtag)"
            }
        ]
    }
}
